<dl class="dl-horizontal">
  <dt><strong>From:</strong></dt>
  <dd><%= @feedback.user.try(:name) %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @feedback.user_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @feedback.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= simple_format(@feedback.content) %></dd>
</dl>