<%= form_for @note, :html => { :class => "form-horizontal note" } do |f| %>
  <%= f.hidden_field :notable_id %>
  <%= f.hidden_field :notable_type %>

  <% if @note.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-6">
      <%= f.text_area :content, rows: 10, :class => 'form-control' %>
      <%=f.error_span(:content) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                event_data_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
