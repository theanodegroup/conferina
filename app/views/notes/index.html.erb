<%- model_class = Note -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:notable_id) %></th>
      <th><%= model_class.human_attribute_name(:notable_type) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.content %></td>
        <td><%= note.notable_id %></td>
        <td><%= note.notable_type %></td>
        <td><%= note.user_id %></td>
        <td><%=l note.created_at %></td>
        <td>
          <%= link_to "Show",
                      note_path(note), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Edit",
                      edit_note_path(note), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Delete',
                      note_path(note),
                      :method => :delete,
                      :data => { :confirm => 'Are you Sure?' },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_note_path,
            :class => 'btn btn-primary' %>
