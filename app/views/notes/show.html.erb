<%- model_class = Note -%>
<div class="page-header">
  <h1>Notes for <%= "#{@note.readable_notable_type}: #{@notable.name}" %></h1>
</div>

<p><%= simple_format(@note.content) %></p>

<%# Back goes to the index page for the notable type %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              event_data_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_note_path(@note), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              note_path(@note),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
